  <!-- Footer -->
  <footer class="py-8 px-4 sm:px-6 lg:px-8 border-t border-white/10">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-gray-400">
        © 2024 Mohammad Faizal. Built with ❤️ using Astro.js
