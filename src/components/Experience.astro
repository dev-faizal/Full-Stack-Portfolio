<style>
  .experience-card {
    @apply bg-[#1a1a1a] rounded-xl shadow-lg border border-[#2a2a2a] hover:shadow-xl hover:border-[#a9927d]/30 transition-all duration-300 p-4 md:p-5 mb-5;
  }
  
  .tech-badge {
    @apply px-3 py-1 bg-[#2a2a2a] border border-[#3a3a3a] rounded-full text-sm text-[#e5e5e5] hover:bg-[#a9927d] hover:text-white transition-all duration-300 hover:scale-105;
  }
  
  .certification-card {
    @apply bg-[#1a1a1a] rounded-xl shadow-lg border border-[#2a2a2a] hover:shadow-xl hover:border-[#a9927d]/30 transition-all duration-300 p-6;
  }
  
  .fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }
  
  .slide-up {
    animation: slideUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  @keyframes fadeIn {
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
  
  /* Collapsible details styles for compact layout */
  .exp-details {
    @apply w-full;
  }
  .exp-summary {
    @apply flex items-center justify-between cursor-pointer select-none;
    list-style: none;
  }
  .exp-summary::-webkit-details-marker {
    display: none;
  }
  .exp-body {
    @apply mt-3;
  }
  .exp-details[open] .chevron {
    transform: rotate(180deg);
    transition: transform 200ms ease;
  }
  .chevron {
    transition: transform 200ms ease;
  }
</style>

<script>
  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);
  
  // Observe all animated elements
  document.querySelectorAll('.fade-in, .slide-up').forEach(el => {
    observer.observe(el);
  });
</script> 