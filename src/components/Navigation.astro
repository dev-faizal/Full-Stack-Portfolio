---
// Navigation component with rich dark theme
---

<nav class="fixed top-0 w-full z-50 bg-[#0f0f0f]/95 border-b border-[#2a2a2a]">
  <div class="container-custom px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="#home" class="text-2xl font-bold gradient-text hover:scale-105 transition-transform duration-300">
       
          <span class="text-2xl font-extrabold text-[#a9927d]" style="font-family: 'Pacifico', 'Dancing Script', cursive; letter-spacing: 0.05em;">
            M5
          </span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#home" class="nav-link text-[#e5e5e5] hover:text-[#a9927d] px-3 py-2 rounded-md text-sm font-medium transition-all duration-300">
            Home
          </a>
          <a href="#about" class="nav-link text-[#e5e5e5] hover:text-[#a9927d] px-3 py-2 rounded-md text-sm font-medium transition-all duration-300">
            About
          </a>
          <a href="#experience" class="nav-link text-[#e5e5e5] hover:text-[#a9927d] px-3 py-2 rounded-md text-sm font-medium transition-all duration-300">
            Experience
          </a>
          <a href="/projects" class="nav-link text-[#e5e5e5] hover:text-[#a9927d] px-3 py-2 rounded-md text-sm font-medium transition-all duration-300">
            Projects
          </a>
          <a href="#contact" class="nav-link text-[#e5e5e5] hover:text-[#a9927d] px-3 py-2 rounded-md text-sm font-medium transition-all duration-300">
            Contact
          </a>
       
          <a href="/M Faizal - Full Stack Developer.pdf" download class="nav-link text-[#e5e5e5] hover:text-[#a9927d] px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4" />
            </svg>
            Download Resume
          </a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-[#e5e5e5] hover:text-[#a9927d] focus:outline-none focus:text-[#a9927d] transition-colors duration-300">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-[#0f0f0f]/95 border-b border-[#2a2a2a]">
      <a href="#home" class="mobile-nav-link text-[#e5e5e5] hover:text-[#a9927d] block px-3 py-2 rounded-md text-base font-medium transition-all duration-300">
        Home
      </a>
      <a href="#about" class="mobile-nav-link text-[#e5e5e5] hover:text-[#a9927d] block px-3 py-2 rounded-md text-base font-medium transition-all duration-300">
        About
      </a>
      <a href="#experience" class="mobile-nav-link text-[#e5e5e5] hover:text-[#a9927d] block px-3 py-2 rounded-md text-base font-medium transition-all duration-300">
        Experience
      </a>
      <a href="#projects" class="mobile-nav-link text-[#e5e5e5] hover:text-[#a9927d] block px-3 py-2 rounded-md text-base font-medium transition-all duration-300">
        Projects
      </a>
      <a href="#contact" class="mobile-nav-link text-[#e5e5e5] hover:text-[#a9927d] block px-3 py-2 rounded-md text-base font-medium transition-all duration-300">
        Contact
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
  
  // Active navigation highlighting
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll('.nav-link, .mobile-nav-link');
  
  window.addEventListener('scroll', () => {
    let current = '';
    sections.forEach(section => {
      const sectionTop = section.offsetTop;
      const sectionHeight = section.clientHeight;
      if (scrollY >= (sectionTop - 200)) {
        current = section.getAttribute('id');
      }
    });
    
    navLinks.forEach(link => {
      link.classList.remove('text-[#a9927d]', 'gradient-text');
      link.classList.add('text-[#e5e5e5]');
      if (link.getAttribute('href') === `#${current}`) {
        link.classList.remove('text-[#e5e5e5]');
        link.classList.add('text-[#a9927d]');
      }
    });
  });
</script>

<style>
  .nav-link:hover {
    transform: translateY(-1px);
  }
  
  .mobile-nav-link:hover {
    background: rgba(169, 146, 125, 0.1);
  }
</style> 