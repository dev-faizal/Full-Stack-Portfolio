              </svg>
            </div>
            
            <div class="absolute -bottom-2 -left-2 sm:-bottom-4 sm:-left-4 w-6 h-6 sm:w-8 sm:h-8 bg-[#7d674c] rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </div>
            
            <div class="absolute top-1/2 -right-4 sm:-right-8 w-4 h-4 sm:w-6 sm:h-6 bg-[#a9927d]/80 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-2 h-2 sm:w-3 sm:h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
          </div>
          
          <!-- Background decorative elements - responsive positioning -->
          <div class="absolute -top-4 -left-4 sm:-top-8 sm:-left-8 w-8 h-8 sm:w-16 sm:h-16 bg-[#a9927d]/15 rounded-full"></div>
          <div class="absolute -bottom-4 -right-4 sm:-bottom-8 sm:-right-8 w-10 h-10 sm:w-20 sm:h-20 bg-[#7d674c]/15 rounded-full"></div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator - responsive positioning -->
  <div class="absolute bottom-4 sm:bottom-8 left-1/2 transform -translate-x-1/2">
    <div class="flex flex-col items-center text-[#a9927d] animate-bounce">
      <span class="text-xs sm:text-sm mb-1 sm:mb-2">Scroll Down</span>
      <svg class="w-4 h-4 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  .tech-badge {
    @apply px-2 py-1 sm:px-4 sm:py-2 bg-[#2a2a2a] border border-[#3a3a3a] rounded-full text-xs sm:text-sm text-[#e5e5e5] hover:bg-[#a9927d] hover:text-white transition-all duration-300 hover:scale-105;
  }
  
  /* Custom animations */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes pulse-glow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.05); }
  }
  
  @keyframes rotate-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  /* Responsive adjustments for very small screens */
  @media (max-width: 480px) {
    .tech-badge {
      @apply px-2 py-1 text-xs;
    }
  }
</style>

<script>
  // Enhanced Hero animations with anime.js
  document.addEventListener('DOMContentLoaded', function() {
    // Check if anime.js is loaded
    if (typeof anime === 'undefined') {
      console.log('Anime.js not loaded, skipping animations');
      return;
    }
    
    // Staggered entrance animations with better timing
    const timeline = anime.timeline({
      easing: 'easeOutCubic',
      duration: 800
    });
    
    // Greeting animation with bounce effect
    timeline.add({
      targets: '#hero p:first-of-type',
      opacity: [0, 1],
      translateY: [30, 0],
      scale: [0.8, 1],
      duration: 1000,
      easing: 'easeOutBack'
    });
    
    // Hero title animation with letter-by-letter effect
    const title = document.querySelector('#hero h1');
    if (title) {
      const text = title.textContent;
      title.innerHTML = text.split('').map(char => `<span class="title-char">${char}</span>`).join('');
      
      timeline.add({
        targets: '#hero .title-char',
        opacity: [0, 1],
        translateY: [50, 0],
        rotateX: [90, 0],
        duration: 1200,
        delay: anime.stagger(50),
        easing: 'easeOutBack'
      }, '-=600');
    }
    
    // Subtitle animation with slide and fade
    timeline.add({
      targets: '#hero p:nth-of-type(2)',
      opacity: [0, 1],
      translateX: [-50, 0],
      duration: 1000,
      easing: 'easeOutQuart'
    }, '-=800');
    
    // Description animation with typewriter effect
    const description = document.querySelector('#hero p:nth-of-type(3)');
    if (description) {
      const text = description.textContent;
      description.innerHTML = '';
      description.style.opacity = '1';
      
      timeline.add({
        targets: description,
        innerHTML: [0, text],
        duration: 1500,
        easing: 'easeOutQuart',
        round: 1
      }, '-=600');
    }
    
    // Tech badges animation with bounce and stagger
    timeline.add({
      targets: '#hero .tech-badge',
      opacity: [0, 1],
      translateY: [30, 0],
      scale: [0.5, 1],
      duration: 800,
      delay: anime.stagger(150),
      easing: 'easeOutBack'
    }, '-=400');
    
    // Buttons animation with scale and bounce
    timeline.add({
      targets: '#hero .btn-primary, #hero .btn-secondary',
      opacity: [0, 1],
      translateY: [40, 0],
      scale: [0.7, 1],
      duration: 1000,
      delay: anime.stagger(200),
      easing: 'easeOutBack'
    }, '-=400');
    
    // Profile image animation (only on desktop)
    const profileContainer = document.querySelector('#hero .relative.hidden.lg\\:flex');
    if (profileContainer) {
      timeline.add({
        targets: profileContainer,
        opacity: [0, 1],
        scale: [0.6, 1],
        translateX: [100, 0],
        duration: 1200,
        easing: 'easeOutBack'
      }, '-=800');
      
      // Floating elements animation
      timeline.add({
        targets: '#hero .absolute.-top-2, #hero .absolute.-bottom-2, #hero .absolute.top-1\\/2',
        opacity: [0, 1],
        scale: [0.3, 1],
        duration: 800,
        delay: anime.stagger(300),
        easing: 'easeOutBack'
      }, '-=600');
    }
    
    // Background elements floating animation
    const backgroundElements = [
      '#hero .absolute.top-16.left-8',
      '#hero .absolute.bottom-16.right-8',
      '#hero .absolute.top-1\\/2.left-8',
      '#hero .absolute.top-1\\/3.right-8',
      '#hero .absolute.bottom-1\\/3.left-8'
    ];
    
    backgroundElements.forEach((selector, index) => {
      anime({
        targets: selector,
        translateY: [-20, 20],
        translateX: [-10, 10],
        opacity: [0.3, 0.8, 0.3],
        scale: [0.9, 1.1, 0.9],
        duration: anime.random(4000, 7000),
        direction: 'alternate',
        loop: true,
        easing: 'easeInOutSine',
        delay: index * 500
      });
    });
    
    // Particle animations with more complex movement
    anime({
      targets: '.particle',
      translateY: [-30, 30],
      translateX: [-20, 20],
      opacity: [0.1, 0.9, 0.1],
      scale: [0.5, 1.5, 0.5],
      rotate: [0, 360],
      duration: anime.random(4000, 8000),
      direction: 'alternate',
      loop: true,
      easing: 'easeInOutSine',
      delay: anime.stagger(800)
    });
    
    // Interactive hover effects for tech badges
    document.querySelectorAll('.tech-badge').forEach(badge => {
      badge.addEventListener('mouseenter', () => {
        anime({
          targets: badge,
          scale: [1, 1.1],
          rotateY: [0, 15],
          duration: 300,
          easing: 'easeOutCubic'
        });
      });
      
      badge.addEventListener('mouseleave', () => {
        anime({
          targets: badge,
          scale: [1.1, 1],
          rotateY: [15, 0],
          duration: 300,
          easing: 'easeOutCubic'
        });
      });
    });
    
    // Button hover animations
    document.querySelectorAll('.btn-primary, .btn-secondary').forEach(button => {
      button.addEventListener('mouseenter', () => {
        anime({
          targets: button,
          scale: [1, 1.05],
          translateY: [0, -2],
          duration: 200,
          easing: 'easeOutCubic'
        });
      });
      
      button.addEventListener('mouseleave', () => {
        anime({
          targets: button,
          scale: [1.05, 1],
          translateY: [-2, 0],
          duration: 200,
          easing: 'easeOutCubic'
        });
      });
    });
    
    // Scroll-triggered animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Trigger floating animation for background elements
          anime({
            targets: '#hero .absolute.top-16.left-8, #hero .absolute.bottom-16.right-8',
            translateY: [-15, 15],
            duration: 3000,
            direction: 'alternate',
            loop: true,
            easing: 'easeInOutSine'
          });
        }
      });
    }, observerOptions);
    
    const heroSection = document.querySelector('#hero');
    if (heroSection) {
      observer.observe(heroSection);
    }
    
    // Continuous floating animation for profile elements (desktop only)
    if (profileContainer) {
      anime({
        targets: '#hero .absolute.-top-2, #hero .absolute.-bottom-2, #hero .absolute.top-1\\/2',
        translateY: [-8, 8],
        rotate: [-5, 5],
        duration: 4000,
        direction: 'alternate',
        loop: true,
        easing: 'easeInOutSine',
        delay: anime.stagger(1000)
      });
    }
  });
</script> 