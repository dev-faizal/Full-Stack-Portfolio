---
// About section with rich dark theme
---

<section id="about" class="section-padding bg-[#0f0f0f]">
  <div class="container-custom">
    <div class="text-center mb-16 fade-in">
      <h2 class="text-4xl sm:text-5xl font-bold mb-4">
        <span class="gradient-text">About Me</span>
      </h2>
      <p class="text-xl text-[#cccccc] max-w-3xl mx-auto">
        Passionate Full Stack Developer with 4+ years of experience crafting innovative digital solutions
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- About Content -->
      <div class="space-y-6 slide-up">
        <div class="prose prose-invert max-w-none">
          <p class="text-lg text-[#e5e5e5] leading-relaxed">
            I'm a dedicated Full Stack Developer based in Bengaluru, Karnataka, with over 4.5 years of experience 
            in building scalable web applications and digital solutions. My passion lies in creating seamless 
            user experiences and robust backend systems.
          </p>
          <p class="text-lg text-[#e5e5e5] leading-relaxed mt-4">
            Currently working at Dimaag AI, I specialize in React, Node.js, Python, and modern web technologies. 
            I love solving complex problems and turning ideas into reality through clean, efficient code.
          </p>
        </div>
        
        <!-- Quick Stats -->
        <div class="grid grid-cols-2 gap-6 mt-8">
          <div class="stat-card">
            <div class="text-3xl font-bold gradient-text">4+</div>
            <div class="text-[#cccccc]">Years Experience</div>
          </div>
          <div class="stat-card">
            <div class="text-3xl font-bold gradient-text">20+</div>
            <div class="text-[#cccccc]">Projects Completed</div>
          </div>
          <div class="stat-card">
            <div class="text-3xl font-bold gradient-text">15+</div>
            <div class="text-[#cccccc]">Technologies</div>
          </div>
          <div class="stat-card">
            <div class="text-3xl font-bold gradient-text">100%</div>
            <div class="text-[#cccccc]">Client Satisfaction</div>
          </div>
        </div>
      </div>
      
      <!-- Skills Grid -->
      <div class="space-y-6 slide-up" style="animation-delay: 0.2s;">
        <h3 class="text-2xl font-semibold text-[#e5e5e5] mb-6">Technical Skills</h3>
        
        <!-- Programming Languages -->
        <div class="skill-category">
          <h4 class="text-lg font-medium text-[#a9927d] mb-3">Programming Languages</h4>
          <div class="flex flex-wrap gap-2">
            <span class="skill-tag">Python</span>
            <span class="skill-tag">JavaScript (ES6/7)</span>
            <span class="skill-tag">TypeScript</span>
            <span class="skill-tag">C++</span>
            <span class="skill-tag">Golang</span>
          </div>
        </div>
        
        <!-- Frontend -->
        <div class="skill-category">
          <h4 class="text-lg font-medium text-[#a9927d] mb-3">Frontend</h4>
          <div class="flex flex-wrap gap-2">
            <span class="skill-tag">React</span>
            <span class="skill-tag">Next.js</span>
            <span class="skill-tag">HTML5</span>
            <span class="skill-tag">CSS3</span>
             <span class="skill-tag">Astro.js</span>
            <span class="skill-tag">Tailwind CSS</span>
            <span class="skill-tag">MaterialUI</span>
            <span class="skill-tag">Redux</span>
             <span class="skill-tag">Recoil</span>
            <span class="skill-tag">React Query</span>
             <span class="skill-tag">Jest</span>
          </div>
        </div>
        
        <!-- Backend -->
        <div class="skill-category">
          <h4 class="text-lg font-medium text-[#a9927d] mb-3">Backend</h4>
          <div class="flex flex-wrap gap-2">
            <span class="skill-tag">Node.js</span>
            <span class="skill-tag">Express.js</span>
            <span class="skill-tag">Fast API</span>
            <span class="skill-tag">Microservices</span>
            <span class="skill-tag">REST APIs</span>
            <span class="skill-tag">GraphQL</span>
            <span class="skill-tag">RabbitMQ</span>
          </div>
        </div>
        
        <!-- Database & DevOps -->
        <div class="skill-category">
          <h4 class="text-lg font-medium text-[#a9927d] mb-3">Database & DevOps</h4>
          <div class="flex flex-wrap gap-2">
            <span class="skill-tag">MongoDB</span>
            <span class="skill-tag">PostgreSQL</span>
            <span class="skill-tag">MySQL</span>
            <span class="skill-tag">Docker</span>
            <span class="skill-tag">Kubernetes</span>
            <span class="skill-tag">Ceph Storage</span>
          </div>
        </div>
        
        <!-- AI/ML -->
        <div class="skill-category">
          <h4 class="text-lg font-medium text-[#a9927d] mb-3">AI/ML</h4>
          <div class="flex flex-wrap gap-2">
            <span class="skill-tag">Large Language Models</span>
            <span class="skill-tag">Vector Databases</span>
            <span class="skill-tag">LangChain</span>
            <span class="skill-tag">LangGraph</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Education -->
    <div class="mt-16 slide-up" style="animation-delay: 0.4s;">
      <h3 class="text-2xl font-semibold text-[#e5e5e5] mb-8 text-center">Education</h3>
      <div class="max-w-2xl mx-auto">
        <div class="education-card">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 gradient-bg rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <h4 class="text-xl font-semibold text-[#e5e5e5]">Bachelor of Engineering (BE) - Computer Science Engineering</h4>
              <p class="text-[#cccccc]">City Engineering College</p>
              <p class="text-[#a9927d] text-sm">2017 - 2021 | CGPA: 8.11/10</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .stat-card {
    @apply bg-[#1a1a1a] rounded-xl shadow-lg border border-[#2a2a2a] hover:shadow-xl hover:border-[#a9927d]/30 transition-all duration-300 p-6 text-center;
  }
  
  .skill-category {
    @apply mb-6;
  }
  
  .skill-tag {
    @apply px-3 py-1 bg-[#2a2a2a] border border-[#3a3a3a] rounded-full text-sm text-[#e5e5e5] hover:bg-[#a9927d] hover:text-white transition-all duration-300 hover:scale-105;
  }
  
  .education-card {
    @apply bg-[#1a1a1a] rounded-xl shadow-lg border border-[#2a2a2a] hover:shadow-xl hover:border-[#a9927d]/30 transition-all duration-300 p-6;
  }
  
  .fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }
  
  .slide-up {
    animation: slideUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  @keyframes fadeIn {
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
</style>

<script>
  // Enhanced About animations with anime.js
  document.addEventListener('DOMContentLoaded', function() {
    // Check if anime.js is loaded
    if (typeof anime === 'undefined') {
      console.log('Anime.js not loaded, skipping animations');
      return;
    }
    
    // Staggered entrance animations for stat cards
    const statCards = document.querySelectorAll('.stat-card');
    
    // Initial entrance animation
    anime({
      targets: statCards,
      opacity: [0, 1],
      translateY: [50, 0],
      scale: [0.9, 1],
      duration: 800,
      delay: anime.stagger(150),
      easing: 'easeOutCubic'
    });
    
    // Animate section title and description
    const sectionTitle = document.querySelector('#about h2');
    const sectionDesc = document.querySelector('#about p');
    
    if (sectionTitle) {
      anime({
        targets: sectionTitle,
        opacity: [0, 1],
        translateY: [30, 0],
        duration: 1000,
        easing: 'easeOutBack'
      });
    }
    
    if (sectionDesc) {
      anime({
        targets: sectionDesc,
        opacity: [0, 1],
        translateY: [30, 0],
        duration: 800,
        delay: 200,
        easing: 'easeOutCubic'
      });
    }
    
    // Animate education cards
    const educationCards = document.querySelectorAll('.education-card');
    
    anime({
      targets: educationCards,
      opacity: [0, 1],
      translateX: [50, 0],
      scale: [0.95, 1],
      duration: 800,
      delay: anime.stagger(200),
      easing: 'easeOutCubic'
    });
    
    // Hover animations for stat cards
    statCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        anime({
          targets: card,
          scale: [1, 1.05],
          translateY: [0, -5],
          duration: 300,
          easing: 'easeOutCubic'
        });
        
        // Animate the number inside
        const number = card.querySelector('.text-3xl');
        if (number) {
          anime({
            targets: number,
            scale: [1, 1.2],
            duration: 300,
            easing: 'easeOutCubic'
          });
        }
      });
      
      card.addEventListener('mouseleave', () => {
        anime({
          targets: card,
          scale: [1.05, 1],
          translateY: [-5, 0],
          duration: 300,
          easing: 'easeOutCubic'
        });
        
        // Reset number scale
        const number = card.querySelector('.text-3xl');
        if (number) {
          anime({
            targets: number,
            scale: [1.2, 1],
            duration: 300,
            easing: 'easeOutCubic'
          });
        }
      });
    });
    
    // Hover animations for education cards
    educationCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        anime({
          targets: card,
          scale: [1, 1.02],
          translateX: [0, 5],
          duration: 300,
          easing: 'easeOutCubic'
        });
      });
      
      card.addEventListener('mouseleave', () => {
        anime({
          targets: card,
          scale: [1.02, 1],
          translateX: [5, 0],
          duration: 300,
          easing: 'easeOutCubic'
        });
      });
    });
    
    // Animate tech badges on hover
    document.querySelectorAll('.skill-tag').forEach(badge => {
      badge.addEventListener('mouseenter', () => {
        anime({
          targets: badge,
          scale: [1, 1.15],
          rotateY: [0, 10],
          duration: 200,
          easing: 'easeOutCubic'
        });
      });
      
      badge.addEventListener('mouseleave', () => {
        anime({
          targets: badge,
          scale: [1.15, 1],
          rotateY: [10, 0],
          duration: 200,
          easing: 'easeOutCubic'
        });
      });
    });
    
    // Animate personal info section
    const personalInfo = document.querySelector('.personal-info');
    if (personalInfo) {
      anime({
        targets: personalInfo,
        opacity: [0, 1],
        translateY: [30, 0],
        duration: 1000,
        delay: 400,
        easing: 'easeOutCubic'
      });
    }
    
    // Scroll-triggered animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Animate elements when they come into view
          const visibleCards = entry.target.querySelectorAll('.stat-card, .education-card');
          anime({
            targets: visibleCards,
            opacity: [0, 1],
            translateY: [30, 0],
            scale: [0.9, 1],
            duration: 600,
            delay: anime.stagger(100),
            easing: 'easeOutCubic'
          });
        }
      });
    }, observerOptions);
    
    const aboutSection = document.querySelector('#about');
    if (aboutSection) {
      observer.observe(aboutSection);
    }
    
    // Floating animation for background elements
    const backgroundElements = document.querySelectorAll('.stat-card::before, .education-card::before');
    if (backgroundElements.length > 0) {
      anime({
        targets: backgroundElements,
        translateY: [-3, 3],
        opacity: [0.2, 0.5, 0.2],
        duration: 3000,
        direction: 'alternate',
        loop: true,
        easing: 'easeInOutSine',
        delay: anime.stagger(400)
      });
    }
    
    // Counter animation for stats (if numbers are present)
    const statNumbers = document.querySelectorAll('.stat-card .text-3xl');
    statNumbers.forEach((number, index) => {
      const targetValue = parseInt(number.textContent) || 0;
      
      anime({
        targets: number,
        innerHTML: [0, targetValue],
        duration: 2000,
        delay: 1000 + (index * 200),
        easing: 'easeOutCubic',
        round: 1
      });
    });
  });
</script> 